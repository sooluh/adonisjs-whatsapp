{
  "name": "adonisjs-whatsapp",
  "version": "0.0.0",
  "description": "Connect your WhatsApp Cloud API with AdonisJS",
  "main": "build/providers/WhatsAppProvider.js",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "clean": "del-cli build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc && npm run copyfiles",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json sooluh/adonisjs-whatsapp"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sooluh/adonisjs-whatsapp"
  },
  "homepage": "https://github.com/sooluh/adonisjs-whatsapp",
  "keywords": [
    "whatsapp",
    "cloud-api",
    "whatsapp-api",
    "whatsapp-cloud",
    "whatsapp-cloud-api",
    "whatsapp-business",
    "whatsapp-business-api",
    "adonis",
    "adonisjs",
    "adonisjs-whatsapp"
  ],
  "author": {
    "name": "Suluh S",
    "url": "https://suluh.my.id",
    "email": "suluhs@aol.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sooluh/adonisjs-whatsapp/issues"
  },
  "devDependencies": {
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/sink": "^5.4.2",
    "@types/node": "^18.13.0",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "github-label-sync": "^2.2.0",
    "husky": "^8.0.3",
    "mrm": "^4.1.13",
    "np": "^7.6.3",
    "prettier": "^2.8.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.2"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.9.0"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [],
    "minNodeVersion": "16.13.1",
    "probotApps": []
  },
  "types": "build/adonis-typings/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/src",
    "build/providers",
    "build/templates",
    "build/instructions.js",
    "build/instructions.md"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "access": "public"
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "env": {
      "WABA_ID": "",
      "WABA_TOKEN": "",
      "WABA_VERIFY": ""
    },
    "providers": [
      "adonisjs-whatsapp"
    ],
    "types": "adonisjs-whatsapp"
  }
}
